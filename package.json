{
  "name": "dvinte-backend",
  "version": "2.0.0",
  "description": "DVinte RPG Backend - Fastify Edition",
  "main": "dist/server.js",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && node scripts/copy-schemas.js",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "test": "vitest",
