    "migrate:undo": "npx sequelize-cli db:migrate:undo"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.835.0",
    "@aws-sdk/s3-request-presigner": "^3.835.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^7.0.1",
    "@fastify/websocket": "^10.0.1",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-socket.io": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "multer-s3": "^3.0.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pino-pretty": "^13.0.0",
    "sequelize": "^6.35.1",
    "sharp": "^0.34.2",
    "socket.io": "^4.8.1",
    "zod": "^3.25.67"
